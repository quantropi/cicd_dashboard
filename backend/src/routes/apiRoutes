const express = require('express');
const router = express.Router();
const repoController = require('../controllers/reposController');
const workflowsController = require('../controllers/workflowsController');
const workflowRunsController = require('../controllers/workflowRunsController');

router.get('/repos', repoController.getRepositories);
router.get('/workflows/:repo', workflowsController.getWorkflows);
router.get('/workflows/runs/:repo', workflowRunsController.getRepoRuns);
router.get('/workflows/:repo/runs/:workflowId', workflowRunsController.getWorkflowRuns);

module.exports = router;